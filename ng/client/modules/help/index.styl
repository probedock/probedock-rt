.help
  justify-content flex-start
  flex-direction column
  align-content stretch
  align-items stretch
  padding .5em
  display flex
  height 100%
  width 100%

  .help-container
    justify-content flex-start
    align-content stretch
    align-items stretch
    flex-direction row
    display flex
    flex 1

    .help-outer-content
      flex-direction column
      margin-bottom 10px
      overflow auto
      padding 10px

      .help-inner-content
        padding-right 10px
        height 0

    .help-spacer
      margin-top 20px

  .help-close
    position absolute
    font-size 2.5em
    cursor pointer
    right 25px
    top 15px

    i
      color #BD362F

  .header
    display flex

    div
      align-items center
      display flex

      p
        text-transform uppercase
        margin-bottom 0
        padding-left .5em
        font-size 3em

        span
          font-weight bold
          color #E9454C

    img
      animation flickerAnimation 5s infinite
      //position absolute
      //height 95%
      width 100px
      opacity 1
      //left 0
      //top 0

    @keyframes flickerAnimation
      0%
        opacity 1
      50%
        opacity 0.5
      100%
        opacity 1
